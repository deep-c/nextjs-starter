{
  "name": "spa",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=16.4.0 <17"
  },
  "scripts": {
    "analyze": "npm run build:types && cross-env ANALYZE=true npm run build",
    "dev": "npm run build:types && dotenv -c -- next dev",
    "build": "npm run build:types && dotenv -c -- next build",
    "build:types": "npm run build:prisma && npm run build:nexus && npm run build:apollo",
    "build:nexus": "ts-node --transpile-only -r tsconfig-paths/register ./src/graphql/schema.ts",
    "build:apollo": "apollo client:codegen -c apollo.config.js --target=typescript --outputFlat src/types/__gen__/apollo",
    "build:prisma": "dotenv -c -- prisma generate",
    "start": "dotenv -c -- next start",
    "lint": "next lint",
    "lint:prettier": "prettier --write './**/*.{js,jsx,ts,tsx,css,md,json}' --config ./.prettierrc",
    "test": "jest",
    "db:makemigration": "dotenv -c -- prisma migrate dev"
  },
  "prisma": {
    "schema": "src/database/schema.prisma"
  },
  "resolutions": {
    "graphql": "15.5.1"
  },
  "dependencies": {
    "@apollo/client": "3.4.1",
    "@devoxa/prisma-relay-cursor-connection": "2.0.2",
    "@headlessui/react": "1.4.0",
    "@heroicons/react": "1.0.3",
    "@next-auth/prisma-adapter": "0.5.3",
    "@prisma/client": "2.27.0",
    "@tailwindcss/forms": "0.3.3",
    "apollo-server-micro": "3.1.1",
    "graphql": "15.5.1",
    "micro": "9.3.4",
    "micro-cors": "^0.1.1",
    "next": "11.0.1",
    "next-auth": "3.27.3",
    "nexus": "1.1.0",
    "nexus-prisma": "0.30.0",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-hook-form": "7.12.1"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "11.0.1",
    "@types/micro-cors": "^0.1.2",
    "@types/node": "16.4.8",
    "@types/react": "17.0.15",
    "apollo": "2.33.4",
    "autoprefixer": "10.3.1",
    "cross-env": "7.0.3",
    "dotenv-cli": "4.0.0",
    "eslint": "7.32.0",
    "eslint-config-next": "11.0.1",
    "eslint-config-prettier": "8.3.0",
    "jest": "27.0.6",
    "postcss": "8.3.6",
    "prettier": "2.3.2",
    "prettier-plugin-organize-imports": "2.3.3",
    "prisma": "2.27.0",
    "tailwindcss": "2.2.7",
    "ts-node": "10.1.0",
    "tsconfig-paths": "3.10.1",
    "typescript": "4.3.5"
  }
}
